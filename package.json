{
  "name": "notion-change-detector",
  "version": "1.0.0",
  "description": "A Node.js script to detect changes in Notion databases",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:act": "act workflow_dispatch -j notion-changes --secret-file .env.local",
    "test:act:schedule": "act schedule -j notion-changes --secret-file .env.local",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx scripts/notion/index.ts",
    "generate-report": "tsx scripts/notion/index.ts",
    "lint": "biome lint scripts/notion/ tests/",
    "lint:fix": "biome lint --write scripts/notion/ tests/",
    "format": "biome format scripts/notion/ tests/",
    "format:fix": "biome format --write scripts/notion/ tests/",
    "check": "biome check scripts/notion/ tests/",
    "check:fix": "biome check --write scripts/notion/ tests/",
    "test:integration": "tsx tests/integration/multi-databases.integration.test.ts",
    "test:diff-markdown": "tsx tests/integration/diff-and-markdown.integration.test.ts"
  },
  "keywords": [
    "notion",
    "api",
    "change-detector",
    "typescript",
    "node"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "js-yaml": "^4.1.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@notionhq/client": "^2.2.0",
    "dotenv": "^17.2.1"
  }
}
